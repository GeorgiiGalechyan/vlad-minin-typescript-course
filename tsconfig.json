// Настраиваем по видео о Вдадилена Минима + статья с хабра "TypeScript: Раскладываем tsconfig по полочкам" https://habr.com/ru/post/542234/

{
  // в поле extends указывается путь к файлу, из которого импортируются настройки
  "extends": "./tsconfig-dev.json",
  "compilerOptions": {
    // здесь все настройки, связанные с компилятором.
    // Мы можем переписать настройки из импортированного файла
  },

  // exclude - исключает файлы и папки из компиляции (аналог gitignore)
  "exclude": [],

  // include - указываем файы и папки которые нужно компилировать в js.
  "include": ["./1_TS_basic", "./2_TS_advanced"]
}
